{
  "manifest_version": 2,
  "name": "Dynamic Penguin Theme",
  "version": "2.0",
  "description": "Toolbar theme with a dynamically updated image.",
  "permissions": [
    "theme",
    "storage",
    "https://raw.githubusercontent.com/" 
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Set Toolbar Color",
    "default_popup": "popup.html",
    "default_icon": "penguin.svg"
  }
}