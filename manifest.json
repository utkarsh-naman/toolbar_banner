{
  "manifest_version": 2,
  "name": "Custom Toolbar Theme with Penguin",
  "version": "1.1",
  "description": "Toolbar theme with fixed penguin image and customizable background color.",
  "permissions": ["theme", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Customize Toolbar Color",
    "default_popup": "popup.html",
    "default_icon": "background.png"
  }
}
